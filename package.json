{
  "homepage": "http://arochniak.github.io/arnews",
  "name": "arnews",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "eslint": "eslint --ext .jsx --ext .js src/",
    "eslint:fix": "eslint --fix --fix-type suggestion,layout src/",
    "build": "webpack --mode production",
    "start": "webpack-dev-server --open",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d public"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/test-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/tests/__mocks__/styleMock.js"
    }
  },
  "author": "arochniak",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.7.4",
    "@types/jest": "^25.2.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.2.6",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "file-loader": "^5.1.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.0.6",
    "jest": "^25.2.7",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.1",
    "stylelint-config-htmlacademy": "^0.1.4",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.0.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-uuid": "^1.0.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx}": [
      "prettier --write",
      "eslint src/*.js --fix"
    ],
    "./src/*.css": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
